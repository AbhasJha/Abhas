@*@model IEnumerable<DisplayViewModel>*@
@model PaginatedList<DisplayViewModel>


<table>
    <td>
        @foreach (var outputData in Model)
        {
            <li style="color : @outputData.Color">@outputData.Data</li>
        }
    </td>

</table>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Display"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Display"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   class="btn btn-default @nextDisabled">
    Next
</a>
<br>
@using (Html.BeginForm("Index", "FizzBuzz", FormMethod.Get))
{
    <input type="submit" value="New Input" />
}